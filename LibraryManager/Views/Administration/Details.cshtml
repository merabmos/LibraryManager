@model List<EmployeeRoleVM>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewBag.roleId;
    var role = ViewBag.role;
}
<a asp-action="Edit" asp-route-id="@roleId" class="btn btn-outline-light"> Edit</a>

<form asp-action="Details" method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from @role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].EmployeeId"/>
                    <input type="hidden" asp-for="@Model[i].Name"/>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].Name
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto"/>
            <a asp-action="Index" 
               class="btn btn-primary" style="width:auto">
                Cancel
            </a>
        </div>
    </div>
</form>