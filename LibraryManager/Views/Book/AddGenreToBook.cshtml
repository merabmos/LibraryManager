@model CreateBookVM

@{
    ViewBag.Title = "Add Genre to book";
    Layout = "_Layout";
}
<div id="ForSavedIds">

</div>
<div class="d-flex mb-2">
    <div id="GenresForBook">
        @Html.DropDownList("GenreId",
            Model.GenresSelectList,
            "Select \n Genre",
            new { @class = "btn btn-secondary mr-3" })
    </div>
    <div>
        <button type="submit" class="btn btn-outline-dark btn-md" OnClick="AddGenreToBook('JsonMethodForGenre','Book','GenreId','ForSavedIds')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
        </button>
    </div>
</div>

<form method="post">
    <input type="submit" value="Next" class="btn btn-outline-dark" />
</form>

<script src="~/js/addGenreToBook.js">

</script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}