@model CreateBookVM

@{
    ViewBag.Title = "Add Genre to book";
    Layout = "_Layout";
}
<div id="ForSavedIds">

</div>
<form method="post">
    <div id="GenresForBook">
        @Html.DropDownList("GenreId",
            Model.GenresSelectList,
            "Select \n Genre",
            new {@class = "btn btn-secondary"})
    </div>
    <button OnClick="AddGenreToBook('JsonMethodForGenre','Book','GenreId','GenresForBook','ForSavedIds')> Add Genre Section </button>
    <input type="submit" value="Next" class="btn btn-outline-dark"/>
</form>
<script src="js/addGenreToBook.js">

</script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
